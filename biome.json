{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"target",
			"node_modules",
			"dist",
			"dist-js",
			"pnpm-lock.yaml",
			"Cargo.lock"
		]
	}
}
